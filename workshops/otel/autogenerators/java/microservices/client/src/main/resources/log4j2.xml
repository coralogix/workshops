<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <JsonTemplateLayout eventTemplateUri="classpath:EcsLayout.json">
                <EventTemplateAdditionalField key="trace_id" value="$${ctx:trace_id:-}"/>
                <EventTemplateAdditionalField key="span_id" value="$${ctx:span_id:-}"/>
                <EventTemplateAdditionalField key="trace_flags" value="$${ctx:trace_flags:-}"/>
            </JsonTemplateLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
