<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <JsonLayout compact="true" eventEol="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSSZ}"/>
                <KeyValuePair key="level" value="$${level}"/>
                <KeyValuePair key="logger" value="$${logger}"/>
                <KeyValuePair key="message" value="$${message}"/>
                <KeyValuePair key="thread" value="$${thread}"/>
                <KeyValuePair key="trace_id" value="$${ctx:trace_id:-}"/>
                <KeyValuePair key="span_id" value="$${ctx:span_id:-}"/>
                <KeyValuePair key="trace_flags" value="$${ctx:trace_flags:-}"/>
                <KeyValuePair key="client_request_uuid" value="$${ctx:client_request_uuid:-}"/>
                <KeyValuePair key="target_url" value="$${ctx:target_url:-}"/>
                <KeyValuePair key="response_content" value="$${ctx:response_content:-}"/>
                <KeyValuePair key="error_message" value="$${ctx:error_message:-}"/>
            </JsonLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
