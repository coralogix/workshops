{
  "compilerOptions": {
    /* File layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Runtime target: Node 16+/18+ friendly */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",

    /* Node typings */
    "types": ["node"],

    /* Interop & QoL */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Output maps (handy for debugging) */
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
